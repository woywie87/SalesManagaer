<Window x:Class="Sales_WPF.CustomReportsExtendWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       
        xmlns:local="clr-namespace:Sales_WPF"
        mc:Ignorable="d"
        Title="CustomReportsExtendWindow" Height="450" Width="800">

    <Grid>
      
        <DataGrid x:Name="dtgExtendReport"  Margin="10,10,40,40"  Grid.Column="0"  EnableRowVirtualization="False"     FontSize="17"  IsReadOnly="True"   AutoGenerateColumns="True" ItemsSource="{Binding}" MouseDoubleClick="dtgExtendReport_MouseDoubleClick" LoadingRow="dtgExtendReport_LoadingRow" AutoGeneratingColumn="dtgExtendReport_AutoGeneratingColumn"  >

        </DataGrid>

    </Grid>
</Window>
